<Window x:Class="VoiceAssistantUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceAssistantUI"
        mc:Ignorable="d"
        Title="Voice Assistant" Height="450" Width="800" Initialized="Window_Initialized" Loaded="Window_Loaded" Closing="Window_Closing" Background="#FF232323">
    <TabControl>
        <TabItem Header="Choices" FontFamily="Consolas" Margin="-3,-2,0,0" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF848484" FontSize="18">
            <Grid Background="#FFE5E5E5" Height="203" Width="279"/>
        </TabItem>
        <TabItem Header="Grammar" FontFamily="Consolas" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="-3,-2,0,0" Foreground="#FF848484" FontSize="18">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem FontFamily="Consolas" Header="Debug" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="-3,-2,0,0" Foreground="#FF848484" FontSize="18">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
        <TabItem FontFamily="Consolas" Header="Settings" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="-3,-2,0,0" Foreground="#FF848484" FontSize="18">
            <Grid Background="#FFE5E5E5"/>
        </TabItem>
    </TabControl>

    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">

                        <Border>
                            <Grid>
                                <Grid>
                                    <Border x:Name="border" 
                                            CornerRadius="5,5,0,0"
                                            Background="#FF404040"/>
                                </Grid>
                                <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#FF121212" />
                            </Trigger>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#FF1C1C1C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

</Window>
